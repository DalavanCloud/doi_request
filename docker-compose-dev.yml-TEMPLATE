version: '2'

networks:
  isis2mongo:
    external: false

services:
  export-doi:
    build:
      context: .
      dockerfile: Dockerfile-dev
    hostname: export-doi
    networks:
      - doimanager
    depends_on:
      - mongo
    volumes:
      - .:/app
    environment:
      - ARTICLEMETA_DOMAIN=localhost
      - ARTICLEMETA_THRIFTSERVER=localhost:11621
      - ARTICLEMETA_ADMINTOKEN=admin
      - CROSSREF_API_USER=
      - CROSSREF_API_PASSWORD=
      - CROSSREF_PREFIX=
      - CROSSREF_DEPOSITOR_NAME=SciELO
      - CROSSREF_DEPOSITOR_EMAIL=scielo@scielo.org
      - LOGGING_LEVEL=DEBUG
      - SENTRY_HANDLER=
    stdin_open: True
    tty: True
    command: processing_export_doi --help

  mongo:
    image: mongo
    hostname: mongo
    networks:
      - doimanager
    volumes:
      - /Users/fabiobatalha/mongo_data:/data/db
    ports:
      - "27017:27017"
